@model IEnumerable<AzureDevOpsMVC.Models.ProjectDetails>

@{
    ViewData["Title"] = "ProjectDetails";
}

<h1>ProjectDetails</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.URL">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
